<div class="index-all">
  <!--index-->

  <h1>Books</h1>

    <table class="table">
      <thead>
        <tr>
          <th class="table-list1">Title</th>
          <th class="table-list2">Body</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <% @books.each do |book| %>
        <tbody>
          <tr>
            <td class="table-list1"><%= book.title %></td>
            <td class="table-list2"><%= book.body %></td>
            <td><%= link_to "Show", book_path(book.id) %></td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
          </tr>
        </tbody>
      <% end %>
    </table>



  <!--new-->

  <h2>New Book</h2>
  <div class="new-errors">
    <% if @booker.errors.any? %>
      <%= @booker.errors.count %> errors prohibited this book from being saved:
      <ul>
        <% @booker.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <%= form_with model: @booker, url: '/books', method: :post do |f| %>
    <div class="new-list">
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Body</p>
      <%= f.text_area :body %>
      <div class="new-submit">
        <%= f.submit 'Create Book' %>
      </div>
    </div>

  <% end %>
</div>